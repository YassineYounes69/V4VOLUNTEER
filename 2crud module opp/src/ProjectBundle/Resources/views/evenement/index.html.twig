{% extends 'base.html.twig' %}

{% block body %}
    <h1>Evenements list</h1>

    <table>
        <thead>
            <tr>
                <th>Reference</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Date</th>
                <th>Capacite</th>
                <th>Prix</th>
                <th>Heuredebut</th>
                <th>Duree</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td><a href="{{ path('evenement_show', { 'reference': evenement.reference }) }}">{{ evenement.reference }}</a></td>
                <td>{{ evenement.nom }}</td>
                <td>{{ evenement.description }}</td>
                <td>{% if evenement.date %}{{ evenement.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ evenement.capacite }}</td>
                <td>{{ evenement.prix }}</td>
                <td>{% if evenement.heureDebut %}{{ evenement.heureDebut|date('H:i:s') }}{% endif %}</td>
                <td>{{ evenement.duree }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('evenement_show', { 'reference': evenement.reference }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('evenement_edit', { 'reference': evenement.reference }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('evenement_new') }}">Create a new evenement</a>
        </li>
    </ul>
{% endblock %}
