{% extends 'EspaceAdmin.html.twig' %}

{% block content %}

    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Gestion des evenements</h4>
                <div class="col-sm-6 col-md-4 col-lg-3"> <a href="{{ path('ajouterEvenement') }}"> <i class="ti-plus"></i> Ajouter Evenement</a></div>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr class="table-danger">
                            <th>Identifiant</th>
                            <th>Nom</th>
                            <th>créateur</th>
                            <th>Lieu</th>
                            <th>Date</th>
                            <th>Capacité</th>
                            <th>Prix</th>
                            <th>Nombre des participants</th>
                            <th>Déscription</th>
                            <th>Actions</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for e in evenement %}
                        <tr class="table-info">
                            <td>{{ e.reference }}</td>
                            <td>{{ e.nom }}</td>
                            <td>{{ e.createur }}</td>
                            <td>{{ e.lieu }}</td>
                            <td>{{ e.date|date }}</td>
                            <td>{{ e.capacite }}</td>
                            <td>{{ e.prix }}</td>
                            <td>{{ e.nbParticipant }}</td>
                            <td>{{ e.description }}</td>

                            <td>
                                <a href="{{ path('modifierEvenement', {'reference': e.reference}) }}"> Modifier</a>
                                <a href="{{ path('supprimerEvenement', {'reference': e.reference}) }}" >Supprimer</a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
{% endblock %}