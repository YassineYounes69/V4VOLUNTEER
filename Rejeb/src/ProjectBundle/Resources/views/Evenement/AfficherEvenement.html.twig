{% extends 'base.html.twig' %}

{% block content %}
    <div class="clearfix"></div>
    </div>
    </div>
    <div class="clearfix"></div>
    <div class="banner two">
        <h2>Détails</h2>

    </div>
    </div>
    <!--banner-bottom-->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>


    <!-- events -->



    <div class="events">
        <div class="container">
            <div class="event-grids">
                <div class="col-md-6 upcoming">
                    <h3>Détails événement</h3>
                    <div class="family">
                        <div class="twenty">
                            <h4>{{ evenement.nbParticipant }}</h4>
                           <p> Participant</p>
                        </div>
                        <div class="sunday">
                            <h5>{{ evenement.nom }}</h5>

                            <p>createur: {{ evenement.createur }} |{{ evenement.date|date }}</p>
                            <p>Lieu: {{ evenement.lieu }}</p>
                        </div>

                        {% set attend=0 %}
                        {% for r in reservation %}
                            {% if r.getIdEvenement()==evenement %}
                                {% set attend=1  %}
                            {% endif %}
                        {% endfor %}
                        {% if attend==0 %}
                        <div class="mor">

                            <a class="more" href="{{ path('participerEvenement', {'reference': evenement.reference}) }}">Participer</a>

                        </div>
                        {% endif %}
                        {% if attend==1 %}
                        <div class="mor">

                                <a class="more" href="{{ path('abandonnerEvenement', {'reference': evenement.reference}) }}">Abandonner</a>

                        </div>
                        {% endif %}
                        <div class="clearfix"> </div>
                    </div>
                    {% set aime=0 %}
                    {% for j in jaime %}
                        {% if j.getIdEvenement()==evenement %}
                            {% set aime=1  %}
                        {% endif %}
                    {% endfor %}
                    {% if aime==0 %}
                    <div class="mor">
                        <a class="more" href="{{ path('aimer', {'reference': evenement.reference}) }}">J'aime</a>
                    </div>
                    {% endif %}
                    {% if aime==1 %}
                    <div class="mor">
                        <a class="more" href="{{ path('dislike', {'reference': evenement.reference}) }}">J'aime pas</a>
                    </div>
                    {% endif %}
                    <div class="twenty">
                        <p> Likes: ({{ mention }})</p>

                    </div>

                </div>
                <div class="col-md-6 keep">
                    <h3>Description</h3>
                    <p>{{ evenement.description }}</p>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>



{% endblock %}
