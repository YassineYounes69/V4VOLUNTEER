{% extends 'base.html.twig' %}

{% block content %}
    <div class="clearfix"></div>
    </div>
    </div>
    <div class="clearfix"></div>
    <div class="banner two">
        <h2>Publier quelque chose</h2>

    </div>
    </div>
    <!--banner-bottom-->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>




    <div class="single">

        <h5 class="m_26"> <a href="{{ path('fos_message_thread_new') }}">Contactez nous</a></h5>
        <div class="single_grid2">
            <h4 class="tz-title-4 tzcolor-blue">
                Publications
            </h4>
            <ul class="list">
                {% for p in publication %}

                    <li>
                        <div class="col-md-2 preview"><a href="#"><img src="{{ asset('images/co.png') }}" class="img-responsive" alt=""></a></div>
                        <div class="col-md-10 data">
                            <div class="title"><a href="#">{{p.titre}}</a><br><span class="m_14">{{p.idMembre.nom}}</span></div>
                            <h5>Description</h5>
                            <h5>{{ p.contenu }}</h5>

                            <h5 class="m_26"> <a href="{{ path('ajouterCommentaire', {'id': p.id}) }}">Commenter</a></h5>
                        </div>

                                <div class="col-md-10 data">
                                    <div class="title"><a href="#">Commentaires</a><br><span class="m_14"></span></div>
                                    {% for c in commentaire %}
                                    {% if c.getIdPublication()==p %}

                                    <h5>{{c.idUser.nom}} : {{c.contenu}}</h5> <h3></h3>


                                    {% endif %}
                                    {% endfor %}

                                </div>
                        <div class="clearfix"></div>
                    </li>
                {% endfor %}

            </ul>
        </div>
{% endblock %}