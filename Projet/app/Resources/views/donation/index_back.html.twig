{% extends 'EspaceAdmin.html.twig' %}

{% block content %}

    <div class="clearfix"></div>
    <div class="banner two">
        <h2>Donations</h2>
    </div>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Type</th>
        <th>Etat</th>
        <th>Quantite</th>
        <th>Volontaire</th>
        <th>Demande</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for donation in donations %}
        <tr>
            <td><a href="{{ path('donation_show', { 'id': donation.id }) }}">{{ donation.id }}</a></td>
            <td>{{ donation.typeDonation }}</td>
            <td>{{ donation.etatDonation }}</td>
            <td>{{ donation.quantiteDonation }}</td>
            <td>{{ donation.userDonation }}</td>
            <td>{{ donation.demandeDonation }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('donation_show', { 'id': donation.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('donation_edit', { 'id': donation.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}